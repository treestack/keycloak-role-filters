<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.treestack.auth</groupId>
    <artifactId>regex-filter-protocol-mapper</artifactId>
    <version>1.1-SNAPSHOT</version>

    <name>Regex Filter Protocol Mapper</name>
    <description>Filter Keycloak roles by regex before adding them to tokens. Reduce token size and control exposed roles.</description>
    <url>https://github.com/treestack/keycloak-role-filters</url>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <junit.version>5.11.4</junit.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <profiles>
        <profile>
            <id>keycloak-22</id>
            <properties>
                <keycloak.version>22.0.5</keycloak.version>
                <jar.classifier>keycloak-22</jar.classifier>
            </properties>
        </profile>
        <profile>
            <id>keycloak-23</id>
            <properties>
                <keycloak.version>23.0.7</keycloak.version>
                <jar.classifier>keycloak-23</jar.classifier>
            </properties>
        </profile>
        <profile>
            <id>keycloak-24</id>
            <properties>
                <keycloak.version>24.0.5</keycloak.version>
                <jar.classifier>keycloak-24</jar.classifier>
            </properties>
        </profile>
        <profile>
            <id>keycloak-25</id>
            <properties>
                <keycloak.version>25.0.6</keycloak.version>
                <jar.classifier>keycloak-25</jar.classifier>
            </properties>
        </profile>
        <profile>
            <id>keycloak-26</id>
            <properties>
                <keycloak.version>26.2.5</keycloak.version>
                <jar.classifier>keycloak-26</jar.classifier>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
    </profiles>

    <scm>
        <url>https://github.com/treestack/keycloak-role-filters</url>
        <connection>scm:git:git://github.com/treestack/keycloak-role-filters</connection>
        <tag>HEAD</tag>
    </scm>

    <developers>
        <developer>
            <id>cvk77</id>
            <name>Christoph von Kr√ºchten</name>
            <email>cvk@treestack.de</email>
            <organization>Treestack</organization>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
        </license>
    </licenses>

    <dependencies>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-core</artifactId>
            <scope>provided</scope>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-server-spi</artifactId>
            <scope>provided</scope>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-server-spi-private</artifactId>
            <scope>provided</scope>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-services</artifactId>
            <scope>provided</scope>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
    <plugins>
        <plugin>
            <artifactId>maven-jar-plugin</artifactId>
            <version>3.3.0</version>
            <configuration>
                <classifier>${jar.classifier}</classifier>
            </configuration>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>3.5.3</version>
        </plugin>
    </plugins>
</build>

</project>